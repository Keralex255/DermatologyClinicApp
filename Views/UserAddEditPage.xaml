<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DermatologyClinicApp.Views.UserAddEditPage"
             Title="Adaugă/Editare Utilizator">
    <VerticalStackLayout>
        <Entry Placeholder="Nume" Text="{Binding Name}" />
        <Entry Placeholder="Email" Text="{Binding Email}" />
        <Entry Placeholder="Parolă" Text="{Binding Password}" IsPassword="True" />
        <Button Text="Salvează" Clicked="OnSaveClicked" />
    </VerticalStackLayout>
</ContentPage>